@include nyah
@module nyu.grammar

@grammar meta : nyah

Id               <- nyah::Id
ScopedId         <- nyah::ScopedId

ModuleId         <- Id %+ '.'
ModuleDefinition <- "@module" ModuleId

NyuGrammar       < WithStatus =
    "@grammar" #Id (":" ScopedId)?  nyu::Grammar

Module           < WithStatus =
    #+(ModuleDefinition?) (nyah::Grammar / NyuGrammar)+

Include          <- "@include" Id %+ "/"

Grammar          <- Include* Module*
