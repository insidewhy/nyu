@include nyu
@module nyu.grammar

@grammar nyah : nyu

Identifier       <- nyu::Identifier
ScopedIdentifier <- nyu::ScopedIdentifier

UnsignedInteger <- [0-9]+

EnumEntry  <- #Identifier ('=' UnsignedInteger)
Enum       <= 'enum' #Identifier '{' EnumEntry* '}'

// todo: add more to these
AssignExpression <- ScopedIdentifier
Type             <- ScopedIdentifier

Attribute         <= #Identifier ':' Type
AssignedAttribute <= #Identifier ':' '=' AssignExpression

Class             <= 'class' #Identifier '{'
                        (Attribute / AssignedAttribute / Enum)* '}'

